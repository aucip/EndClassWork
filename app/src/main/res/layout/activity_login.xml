<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.gc.endclasswork.activity.Activity_login">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#24cccccc"
        android:text="用户登陆"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#cd0000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/taobao"/>
    </LinearLayout>

    <EditText
        android:id="@+id/login_edit01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入淘宝账号"
        android:inputType="text" />
    <EditText
        android:id="@+id/login_edit02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="请输入密码"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/login_bt01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="登陆"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@drawable/btn_bg01"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"	>
        <Button
            android:id="@+id/login_bt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#333"
            android:layout_weight="1"
            android:text="注册"
            android:background="#00000000"	/>

        <Button
            android:id="@+id/login_bt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#333"
            android:text="忘记密码"
            android:layout_weight="1"
            android:background="#00000000"	/>
    </LinearLayout>
</LinearLayout>
