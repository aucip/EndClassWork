<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Tab_home"
            style="@style/tab_menu_item">
                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/home_fill"
                    app:srcCompat="@drawable/ic_common_home_press" />
                <TextView
                    android:id="@+id/tv_home"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主页"
                    android:textSize="13sp"
                    android:textColor="#D81E06"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Tab_sell"
            style="@style/tab_menu_item">
                <ImageView
                    android:id="@+id/iv_sell"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/sell"/>
                <TextView
                    android:id="@+id/tv_sell"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热卖"
                    android:textSize="13sp"
                    android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Tab_classify"
            style="@style/tab_menu_item">
                <ImageView
                    android:id="@+id/iv_classify"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/fenlei" />
                <TextView
                    android:id="@+id/tv_classify"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textSize="13sp"
                    android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Tab_cart"
            style="@style/tab_menu_item">
                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/cart"/>
                <TextView
                    android:id="@+id/tv_cart"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textSize="13sp"
                    android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Tab_my"
            style="@style/tab_menu_item">
                <ImageView
                    android:id="@+id/iv_my"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/my"/>
                <TextView
                    android:id="@+id/tv_my"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="13sp"
                    android:textColor="#000"/>
        </LinearLayout>

</LinearLayout>